<section class="bg-light container py-5 position-relative">
  <h2 class="text-center mb-3 fs-1">My Recipes</h2>
  
  <%= link_to 'New Recipe', new_recipe_path(@recipe), class:"btn btn-primary left position-absolute top-0 end-0" %>

  <ul >
    <% @recipes.each_with_index do |recipe, index| %>
    <li class="card border-0 shadow-sm mb-3">
      <div class="card-body d-flex justify-content-between align-items-center mb-3">
        <div class="col-4 ">

          <div class="col-span-2 my-auto">
            <%= link_to recipe_path(id: recipe.id), class: "text-decoration-none" do %>    
              <p class="fs-4"><%= recipe.name.capitalize %></p>             
            <% end %>
          </div>

          <%= button_to 'Remove', recipe_path(recipe), method: :delete,
          class: "btn btn-danger" %>

        </div>
        <div class="col-8 p-3">
          <p class="truncateText fs-5 text-secondary fst-italic"><%= recipe.description.capitalize %></p>
          <div class="d-flex flex-column justify-content-between align-items-end">
            <p class="mb-1 fw-lighter">Total Food Item: <span class="badge bg-primary"> <%= recipe.total_food_items %> </span> </p>
            <p class="mb-1 fw-lighter">Total Price: <span class="badge bg-primary"> <%= recipe.total_price %> </span></p>
          </div>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</section>
